<!DOCTYPE html>
<html lang="en">

<%- include('partials/header.ejs', { title: 'Bejelentkezés' }) %>

    <body>
        <%- include('partials/navbar.ejs') %>
            <% if (typeof loginErrMess !=='undefined' ) { %>
                <p class="error">
                    <%= loginErrMess %>
                </p>
                <% } %>
                    <div id="login">
                        <form class="bg-light align-items-center p-4" action="/login" method="POST" id="login-form"
                            enctype="application/x-www-form-urlencoded">
                            <div class="row m-2">
                                <label class="form-label" for="username">Felhasználónév:</label>
                                <input type="text" name="username" id="username" class="form-control" required>
                            </div>
                            <div class="row m-2">
                                <label class="form-label" for="password">Jelszó:</label>
                                <input type="password" name="password" id="password" class="form-control" required>
                            </div>
                            <div class="row p-3">
                                <button class="btn btn-primary" type="submit">Bejelentkezés</button>
                            </div>
                        </form>
                    </div>
                    <a href="/register" id="register-button">Regisztráció</a>

                    <%- include('partials/footer.ejs') %>
    </body>

</html>