<!DOCTYPE html>
<html lang="en">

<%- include('partials/header.ejs', { title: 'Bejelentkezés' }) %>

    <body>
        <%- include('partials/navbar.ejs') %>
            <% if (typeof regErrMess !=='undefined' ) { %>
                <p class="error">
                    <%= regErrMess %>
                </p>
                <% } %>
                    <div id="registration">
                        <form action="/register" method="POST" id="registration-form" class="forms"
                            enctype="application/x-www-form-urlencoded">
                            Felhasználónév: <input type="text" name="username" id="username" required>
                            <br><br>
                            Jelszó: <input type="password" name="password1" id="password1" required>
                            <br><br>
                            Jelszó megerősítése: <input type="password" name="confirm" id="confirm" required>
                            <br><br>
                            <button type="submit">Regisztráció</button>
                        </form>
                    </div>
                    <a href="/login" id="login-button">Bejelentkezés</a>

                    <%- include('partials/footer.ejs') %>
    </body>

</html>