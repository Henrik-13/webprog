<!DOCTYPE html>
<html lang="en">

<%- include('partials/header.ejs', { title: 'Bejelentkezés' }) %>

    <body>
        <%- include('partials/navbar.ejs') %>
            <% if (typeof regErrMess !=='undefined' ) { %>
                <p class="error">
                    <%= regErrMess %>
                </p>
                <% } %>
                    <div id="registration">
                        <form class="bg-light align-items-center p-4" action="/register" method="POST"
                            id="registration-form" enctype="application/x-www-form-urlencoded">
                            <div class="row m-2">
                                <label class="form-label" for="username">Felhasználónév:</label>
                                <input type="text" name="username" id="username" class="form-control" required>
                            </div>
                            <div class="row m-2">
                                <label class="form-label" for="password1">Jelszó:</label>
                                <input type="password" name="password1" id="password1" class="form-control" required>
                            </div>
                            <div class="row m-2">
                                <label class="form-label" for="confirm">Jelszó megerősítése:</label>
                                <input type="password" name="confirm" id="confirm" class="form-control" required>
                            </div>
                            <div class="row p-3">
                                <button class="btn btn-primary" type="submit">Regisztráció</button>
                            </div>
                        </form>
                    </div>
                    <a href="/login" id="login-button">Bejelentkezés</a>

                    <%- include('partials/footer.ejs') %>
    </body>

</html>